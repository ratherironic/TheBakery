<%= form_for(@story) do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :desc %><br />
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :complete %><br />
    <%= f.select :complete, options_for_select([["Progress", ""], ["Finished", 0], ["Ready for QA", 1], ["Ready for Integration", 2], ["Started", 3], ["Not Started", 4]]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
